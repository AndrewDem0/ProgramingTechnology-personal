pipeline {
    options { timestamps() }
    agent none
    stages {
        stage('Check scm') {
            agent any
            steps {
                checkout scm
            }
        } 
        stage('Build') {
            steps {
                echo "Building ...${BUILD_NUMBER}"
                echo "Build completed"
            }
        } 
        stage('Test') {
            agent { 
                docker { 
                    image 'python:3.12-alpine' 
                    // Замість Windows-шляху вказуємо Unix-подібний шлях
                    args '-u="root" -w "/c/ProgramData/Jenkins/.jenkins/workspace/dcvrv/"'
                } 
            }
            steps {
                sh 'apk add --no-cache py3-pip'
                sh 'pip install unittest-xml-reporting'

                // Використовуємо Unix-подібний шлях до файлу
                sh 'python /c/ProgramData/Jenkins/.jenkins/workspace/dcvrv/lab4_jenkins/test_4_lab2.py' 
            }
            post {
                always {
                    junit 'lab4_jenkins/test-reports.xml'
                }
                success {
                    echo "Application testing successfully completed"
                }
                failure {
                    echo "Oooppss!!! Tests failed!"
                }
            }
        }
    } 
}

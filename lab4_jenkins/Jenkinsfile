pipeline {
    options { timestamps() }  // Додаємо час до логів для зручності
    agent none
    tools {
        dockerTool 'docker'  // Використовуємо Docker, налаштований в Jenkins через 'Tools'
    }

    stages {
        stage('Check scm') {
            agent any
            steps {
                checkout scm  // Завантажуємо код з репозиторію
            }
        }

        stage('Build') {
            steps {
                echo "Building ...${BUILD_NUMBER}"  // Номер збірки
                echo "Build completed"  // Підтвердження завершення збірки
            }
        }

        stage('Test') {
            agent { 
                docker { 
                    image 'python:3.12-alpine'  // Використовуємо контейнер з Python 3.12
                    args '-u root -w /workspace/Lab_4_2'  // Запуск від імені root для встановлення залежностей
                } 
            }

            steps {
                // Встановлюємо pip і залежності
                sh 'apk add --no-cache py3-pip'
                sh 'pip install xmlrunner'

                // Запускаємо тести
                sh 'python3 -m unittest discover -s . -p "*_test.py"'
            }

            post {
                always {
                    // Завжди архівуємо результати тестів у форматі JUnit
                    junit 'lab4_jenkins/test-results.xml'
                }

                success {
                    echo "Application testing successfully completed"  // Якщо тести пройшли успішно
                }

                failure {
                    echo "Oooppss!!! Tests failed!"  // Якщо тести провалились
                }
            }
        }
    }
}

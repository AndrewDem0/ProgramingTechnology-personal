pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('DOCKERHUB_CREDENTIALS') // Змінна для облікових даних Docker Hub
        DOCKER_IMAGE_NAME = "andrew43/order_queue_app" // Замініть на ваше ім'я користувача
    }

    stages {
        stage('Checkout') {
            steps {
                // Клонуємо репозиторій
                git 'https://your-repository-url'
            }
        }

        stage('Build') {
            steps {
                // Встановлюємо залежності (якщо є requirements.txt) та збираємо програму
                sh 'pip install -r requirements.txt || true'
            }
        }

        stage('Test') {
            steps {
                // Запускаємо тести
                sh 'python3 -m unittest discover -s .'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Створюємо Docker образ
                script {
                    docker.build("${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'DOCKERHUB_CREDENTIALS') {
                        docker.image("${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}").push()
                    }
                }
            }
        }
    }

    post {
        success {
            echo "Build, Test, and Docker Push were successful!"
        }
        failure {
            echo "Build, Test, or Docker Push failed."
        }
    }
}
